        android:textSize="10sp"
        android:textColor="#ffffff"
        android:id="@+id/tv_buffer_net_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:text="缓冲中...30kb/s"/>
</LinearLayout>